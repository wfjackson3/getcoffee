<h1>Listing invites</h1>

<table class="table">
  <tr>
    <th>Status</th>
    <th>Position</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invites.each do |invite| %>
  <tr>
    <td><%= invite.invite_status.status %></td>
    <td><%= invite.position.friend.twitter_handle %></td>
    <td><%= invite.event.title %></td>
    <td><%= link_to 'Show', invite %></td>
    <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
    <td><%= link_to 'Destroy', invite, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

