<%= twitter_bootstrap_form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.inputs 'New event' do %>
	  <div class="field">
	    <%= f.datetime_select :date, :ampm => true, :minute_step => 15 %>
	  </div>
	  <div class="field">
	    <%= f.text_field :address %>
	  </div>
	  <div class="row">
		  <div class="span2">
		    <%= f.text_field :city, :class => 'span2' %>
		  </div>
		  <div class="span1">
		    <%= f.text_field :state, :class => 'span1' %>
		  </div>
	  </div>
	  <div class="field">
	    <%= f.collection_select(:event_tag_id, :event_tag_id, EventTag.all, :id, :tag) %>
	  </div>
	  <div class="field">
	    <%= f.collection_select(:event_status_id, :event_status_id, EventStatus.all, :id, :status) %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
  <% end %>
<% end %>
