<p id="notice"><%= notice %></p>
<div class="hero-unit">
	<div class="row">
		<div class="span10">
			<h2><%= @event.title %></h2>
			<div class="row">
				<div class="span4">
					<%= gmaps("map_options" => {"zoom" => 15, "auto_zoom" => false, "mapTypeControl" => false}, "markers" => { "data" => @json }) %>
				</div>
				<div class="span3">
					<p><%= @event.address %></p>
					<p><%= @event.city %>, <%= @event.state %></p>
					<p><b>Status:</b> <%= @event.event_status.status %></p>
					<%= link_to 'Edit', edit_event_path(@event) %> |
					<%= link_to 'Back', events_path %>
				</div>
				<div class="span3">
					<h3>Invitations</h3>
					<%= render @event.invites %>
					<%= link_to 'Add', new_invite_path %>
				</div>
			</div>
		</div>
	</div>
</div>


